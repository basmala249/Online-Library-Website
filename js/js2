document.addEventListener('DOMContentLoaded', function() {
    const loginForm = document.getElementById('logform');
    if(loginForm){
    loginForm.addEventListener('submit', function(event) {
        // Prevent the default form submission behavior
        event.preventDefault();

        const adminButton = document.querySelector('.btn1');
        const userButton = document.querySelector('.btn');

        // Determine which button was clicked
        if (event.submitter === adminButton) {
            window.location.href = "My-Profile.html?type=admin";
        } else if (event.submitter === userButton) {
            window.location.href = "My-Profile.html?type=user";
        }
    });
}
    const urlParams = new URLSearchParams(window.location.search);
    const type = urlParams.get('type');

    const adminProfile = document.getElementById('admin');
    const userProfile = document.getElementById('user');
    if (type === 'admin') {
        adminProfile.style.display = 'block';
        userProfile.style.display = 'none';
    } else if (type === 'user') {
        adminProfile.style.display = 'none';
        userProfile.style.display = 'block';
    }
});
